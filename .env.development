# Development Environment Configuration

# Node Environment
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aicode_dev"
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aicode_dev

# JWT Configuration
JWT_SECRET="dev-jwt-secret-change-in-production-use-crypto.randomBytes(64).toString('hex')"
JWT_REFRESH_SECRET="dev-jwt-refresh-secret-change-in-production-use-crypto.randomBytes(64).toString('hex')"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Redis Configuration (optional for development)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
FROM_EMAIL="noreply@aicode-platform.dev"

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf