# Test Environment Configuration

# Node Environment
NODE_ENV=test
PORT=3001
HOST=localhost

# Database Configuration (Use separate test database)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/aicode_test"
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=aicode_test

# JWT Configuration (Use weaker settings for faster tests)
JWT_SECRET="test-jwt-secret-not-for-production"
JWT_REFRESH_SECRET="test-jwt-refresh-secret-not-for-production"
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h

# Security Configuration (Relaxed for testing)
BCRYPT_SALT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=test.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001

# Disable external services for testing
REDIS_URL=""
SMTP_HOST=""

# Test-specific settings
TEST_TIMEOUT=30000
JEST_WORKER_ID=1